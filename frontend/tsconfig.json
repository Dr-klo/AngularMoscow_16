{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jquery"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "es2015",
    "baseUrl": ".",
    "rootDirs": [
      "./src",
      "../Contracts/src",
      "../ModuleA/src"
    ],
    "paths": {
      "@common/*" : ["../Contracts/src/*"],
      "@service/*" : ["../ModuleA/src/*"],
      "app/*" : ["./src/app/*"]
    }
  }
}